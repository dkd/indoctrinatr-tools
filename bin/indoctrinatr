#!/usr/bin/env ruby
require 'bundler/setup'
# Bundler.require(:default)

require 'dry/cli'
require 'zeitwerk'

loader = Zeitwerk::Loader.for_gem
# loader.log!
loader.push_dir('lib')
loader.inflector.inflect 'latex' => 'LATEX'
loader.inflector.inflect 'redcloth' => 'RedCloth'
loader.setup

Dry::CLI.new(Indoctrinatr::Tools::Commands).call
